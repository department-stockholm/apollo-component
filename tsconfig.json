{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    // "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2015", "es2016"],
    "declaration": false
  }
}
